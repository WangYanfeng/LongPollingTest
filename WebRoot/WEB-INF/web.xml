<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>TimePolling</servlet-name>
    <servlet-class>Action.TimePolling</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>Action.Login</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>Chat</servlet-name>
    <servlet-class>Action.Chat</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SendMsg</servlet-name>
    <servlet-class>Action.SendMsg</servlet-class>
  </servlet>




  <servlet-mapping>
    <servlet-name>TimePolling</servlet-name>
    <url-pattern>/servlet/TimePolling</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/servlet/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Chat</servlet-name>
    <url-pattern>/servlet/Chat</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendMsg</servlet-name>
    <url-pattern>/servlet/SendMsg</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>